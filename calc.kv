MainWidget:

<Button>:
    font_size:dp(30)

<MainWidget>:
    GridLayout:
        rows: 2
        cols: 1
        size: root.width, root.height
        padding: dp(20)
        spacing: dp(20)

        Label:
            id: display
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    size: display.size
                    pos: display.pos
            text:""
            font_size:dp(60)
            size_hint_y: 0.2

        GridLayout:
            rows: 4
            cols: 4
            size_hint_y: 0.8
            spacing: dp(3)
            font_size: dp(30)

            Button:
                text: '7'
                on_press: display.text += self.text
            Button:
                text: '8'
                on_press: display.text += self.text
            Button:
                text: '9'
                on_press: display.text += self.text
            Button:
                text: '*'
                on_press: display.text += self.text
            
            Button:
                text: '4'
                on_press: display.text += self.text
            Button:
                text: '5'
                on_press: display.text += self.text
            Button:
                text: '6'
                on_press: display.text += self.text
            Button:
                text: '/'
                on_press: display.text += self.text
            
            Button:
                text: '1'
                on_press: display.text += self.text
            Button:
                text: '2'
                on_press: display.text += self.text
            Button:
                text: '3'
                on_press: display.text += self.text
            Button:
                text: '+'
                on_press: display.text += self.text

            Button:
                text: 'AC'
                on_press: display.text = ''
            Button:
                text: '0'
                on_press: display.text += self.text
            Button:
                text: '='
                on_press: display.text = root.evaluate_expression(display.text)
            Button:
                text: '-'
                on_press: display.text += self.text